{
  "Redis": {
    "ConnectionString": "$REDIS_CONNECTION_URL",
    "InstanceName": "$REDIS_PREFIX"
  },
  "ElasticSearch": {
    "ConnectionString": "$ELK_CONNECTION_URL",
    "Indexes": {
      "AuditLog": "$ELK_INDEX_AUDITLOG",
      "ApplicationLog": "$ELK_INDEX_APPLOG"
    }
  },
  "Kafka": {
    "MaxThreadsCount": 10,
    "MaxTimeoutMsec": 5000,
    "PermissionsTopic": "uat.sso.sync.permission",
    "PermissionsSystemName": "AditlogV2.viewAuditLog",
    "PermissionsServiceName": "AditLog",
    "ConsumerConfig": {
      "bootstrap.servers": "$KAFKA_BROKER",
      "group.id": "$KAFKA_CONSUMER_GROUP",
      "enable.partition.eof": true,
      "log.connection.close": false,
      "enable.auto.commit": false,
      "queued.min.messages": 10,
      "queued.max.messages.kbytes": 256,
      "auto.offset.reset": "smallest",
      "socket.blocking.max.ms": 100,
      "fetch.error.backoff.ms": 200
    },
    "ProducerConfig": {
      "bootstrap.servers": "$KAFKA_BROKER",
      "log.connection.close": "false",
      "linger.ms": 100,
      "connections.max.idle.ms": 6000000,
      "socket.keepalive.enable": true,
      "reconnect.backoff.max.ms": 200,
      "broker.address.family": "v6"
    },
    "Topics": {
      "AuditLog": "$KAFKA_TOPIC_AUDITLOG"
    },
    "HealthCheck": {
      "CriticalErrorsCount": 20,
      "ForPeriodInSecond": 20
    }
  },
  "SSO": {
    "ServiceName": "$SSO_SERVICE_NAME",
    "ServiceId": "$SSO_AUTH_SERVICE_ID",
    "RootNodeId": "$SSO_AUTH_ROOT_NODE_ID",
    "Url": "$SSO_SERVICE_URL",
    "ApiKey": "$SSO_AUTH_API_KEY"
  },
  "JsonData": {
    "ServiceCategories": "JsonData/ServiceCategories.json"
  },
  "Swagger": {
    "XmlComments": [ "AuditService.Common.xml", "AuditService.WebApi.xml" ]
  }
}
